<h1><strong>Editing Book</strong></h1>

<% if @book.errors.any? %>
<%= @book.errors.count %>errors
<ul>
 <% @book.errors.full_messages.each do |message| %>
 <il><% message %></il>
 <% end %>
</ul>
<% end %>
<!--@bookへ送るためのform_with-->
<%= form_with model: @book do |f| %>
 
 <h4>Title</h4>
 <%= f.text_field :title %>
 
 <h4>Body</h4>
 <%= f.text_area :body %>
 
 <div class="button">
 <%= f.submit 'Update Book' %>
 </div>
 
 <%= link_to "Show",book_path(@book.id) %>
 <%= link_to "Back",'/books' %>
<% end %>